        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Lesson 4"
            android:id="@+id/lesson_detail_title"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/lesson_description_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="The Call to Discipleship"
            android:id="@+id/lesson_detail_description"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/lesson_description_text"
            android:textSize="12sp"
            android:text="April 19, 2015"
            android:id="@+id/lesson_detail_date"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MP3"
                android:id="@+id/mp3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/lesson_description_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Click to listen to mp3 audio"
                android:onClick="onClickAudio"
                android:clickable="true"
                android:id="@+id/lesson_detail_mp3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="PDF"
                android:id="@+id/pdf"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/lesson_description_text"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Click to view PDF version of lesson"

                android:onClick="onClickPdf"
                android:clickable="true"

                android:id="@+id/lesson_detail_pdf"/>
</LinearLayout>