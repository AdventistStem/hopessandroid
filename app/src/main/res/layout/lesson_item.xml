<?xml version="1.0" encoding="utf-8"?>

<com.adventiststem.hopess.BasicListItemView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#EEEEEE">
<ImageView
        android:id="@+id/lesson_thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"/>
<TextView
        android:id="@+id/lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/lesson_title_text"
        android:layout_toRightOf="@+id/video_thumbnail"
        android:ellipsize="end"
        android:maxLines="2"
        />
        <TextView
                android:id="@+id/lesson_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lesson_title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/lesson_description_text"
                android:layout_toRightOf="@+id/lesson_thumbnail"
                android:ellipsize="end"
                android:maxLines="3"
                />

</com.adventiststem.hopess.BasicListItemView>